-- MM2 —Å–ø–∞–º —Å–∫—Ä–∏–ø—Ç (–±–µ–∑ –∞–≤—Ç–æ-–ø–µ—Ä–µ–∑–∞—Ö–æ–¥–∞)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- –§–ª–∞–≥ –¥–ª—è —Ä–∞–±–æ—Ç—ã
getgenv().AutoSpamEnabled = true

local messages = {
    "üíé –ü—Ä–æ–¥–∞–º Godly –¥–µ—à–µ–≤–æ –∑–∞ –≥—Ä–Ω. Hexon_Shop",
    "üî• Godly –∑–∞ –≥—Ä–∏–≤–Ω—ã. –ë—ã—Å—Ç—Ä–æ. Hexon_Shop",
    "üí∞ –ö—É–ø–∏—Ç—å Godly –Ω–µ–¥–æ—Ä–æ–≥–æ. Hexon_Shop",
    "üéÆ Godly –ø–æ –≤—ã–≥–æ–¥–Ω–æ–π —Ü–µ–Ω–µ. Hexon_Shop",
    "‚≠ê Godly –¥–ª—è —Ç—Ä–µ–π–¥–∞. Hexon_Shop",
    "‚ö° –î–µ—à–µ–≤—ã–π Godly –∑–∞ –≥—Ä–Ω. Hexon_Shop",
    "üîî –ü—Ä–æ–¥–∞–∂–∞ Godly. Hexon_Shop",
    "‚ú® Godly –≤ –Ω–∞–ª–∏—á–∏–∏. Hexon_Shop",
    "üöÄ –ü–æ–∫—É–ø–∞–π Godly. Hexon_Shop",
    "üíØ Godly –ø–æ –Ω–∏–∑–∫–æ–π —Ü–µ–Ω–µ. Hexon_Shop"
}

-- –ü–µ—Ä–µ–º–µ—à–∏–≤–∞–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏–π
local function shuffle(tbl)
    for i = #tbl, 2, -1 do
        local j = math.random(i)
        tbl[i], tbl[j] = tbl[j], tbl[i]
    end
    return tbl
end

-- –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
local function sendMessage(text)
    pcall(function()
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(text, "All")
    end)
    
    pcall(function()
        game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(text)
    end)
end

-- –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª (–±–µ–∑ –ø–µ—Ä–µ–∑–∞—Ö–æ–¥–∞)
local function mainLoop()
    print("ü§ñ –°–ø–∞–º —Å–∫—Ä–∏–ø—Ç –∑–∞–ø—É—â–µ–Ω!")
    print("üì¢ –¢–æ–ª—å–∫–æ —Å–ø–∞–º, –±–µ–∑ –ø–µ—Ä–µ–∑–∞—Ö–æ–¥–∞")
    
    local messageCount = 0
    
    while getgenv().AutoSpamEnabled do
        messageCount += 1
        print("\nüìä –¶–∏–∫–ª —Å–æ–æ–±—â–µ–Ω–∏–π #" .. messageCount)
        
        -- –ñ–¥–µ–º –∑–∞–≥—Ä—É–∑–∫–∏ —á–∞—Ç–∞
        for i = 1, 5 do
            local chatLoaded = pcall(function()
                return game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents") ~= nil
            end)
            
            if chatLoaded then
                break
            end
            task.wait(1)
        end
        
        -- –û—Ç–ø—Ä–∞–≤–ª—è–µ–º 5 —Å–æ–æ–±—â–µ–Ω–∏–π
        local shuffled = shuffle(messages)
        
        for i = 1, 5 do
            if not getgenv().AutoSpamEnabled then break end
            
            sendMessage(shuffled[i])
            print("üì¢ [" .. i .. "/5] –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ")
            
            if i < 5 then
                task.wait(math.random(2, 3)) -- –ó–∞–¥–µ—Ä–∂–∫–∞ 2-3 —Å–µ–∫—É–Ω–¥—ã
            end
        end
        
        -- –ü–∞—É–∑–∞ –ø–µ—Ä–µ–¥ —Å–ª–µ–¥—É—é—â–∏–º –Ω–∞–±–æ—Ä–æ–º —Å–æ–æ–±—â–µ–Ω–∏–π (–±–µ–∑ –ø–µ—Ä–µ–∑–∞—Ö–æ–¥–∞)
        if getgenv().AutoSpamEnabled then
            print("‚è∏Ô∏è –ü–∞—É–∑–∞ –ø–µ—Ä–µ–¥ —Å–ª–µ–¥—É—é—â–∏–º —Ü–∏–∫–ª–æ–º...")
            task.wait(10) -- –ñ–¥–µ–º 10 —Å–µ–∫—É–Ω–¥ –ø–µ—Ä–µ–¥ —Å–ª–µ–¥—É—é—â–∏–º —Ü–∏–∫–ª–æ–º
        end
    end
    
    print("‚èπÔ∏è –°–ø–∞–º –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
end

-- –ê–≤—Ç–æ-–∑–∞–ø—É—Å–∫
print("================================")
print("ü§ñ MM2 –°–ü–ê–ú –°–ö–†–ò–ü–¢")
print("üì¢ –ë–µ–∑ –∞–≤—Ç–æ-–ø–µ—Ä–µ–∑–∞—Ö–æ–¥–∞")
print("üì¢ –¢–æ–ª—å–∫–æ –æ—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π")
print("================================")

-- –ó–∞–ø—É—Å–∫–∞–µ–º —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
task.wait(3)

-- –ó–∞–ø—É—Å–∫–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª
local success, err = pcall(function()
    mainLoop()
end)

if not success then
    print("‚ö†Ô∏è –û—à–∏–±–∫–∞: " .. err)
end

-- –§—É–Ω–∫—Ü–∏—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏
getgenv().StopSpam = function()
    getgenv().AutoSpamEnabled = false
    print("‚èπÔ∏è –°–ø–∞–º –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
end

print("‚úÖ –°–∫—Ä–∏–ø—Ç —Ä–∞–±–æ—Ç–∞–µ—Ç")
print("‚ÑπÔ∏è StopSpam() - –æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å")
